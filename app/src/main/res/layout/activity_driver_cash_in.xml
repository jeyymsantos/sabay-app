<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FBEDFF"
    android:gravity="top"
    tools:context=".Login.LoginActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/shrikhand"
        android:gravity="left"
        android:text="Sabay"
        android:textColor="#430852"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textSize="40sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="my bits "
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/darkBG"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="200dp">

        <LinearLayout
            android:background="@color/darkBG"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="200dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="wallet balance"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    android:textSize="26sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:src="@drawable/bits"
                    android:layout_marginLeft="5dp"
                    android:layout_width="70dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:text="Bits: "
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="28sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:text="500.75"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="28sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout

                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="Driver's Name: "
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white"
                    android:text="Jhon Mark Santos "
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:text="Est. Bits: "
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/white"
                    android:layout_marginLeft="68dp"
                    android:text="50 - 100 bits"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        android:layout_width="350dp"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:background="@color/lightBG"
            android:layout_width="80dp"
            android:orientation="vertical"
            android:layout_height="100dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:src="@drawable/cashin"
                    android:layout_marginLeft="5dp"
                    android:layout_width="70dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/darkBG"
                    android:text="cash in "
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:background="@color/lightBG"
            android:layout_width="80dp"
            android:layout_marginLeft="49dp"
            android:orientation="vertical"
            android:layout_height="100dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:src="@drawable/cashout"
                    android:layout_marginLeft="5dp"
                    android:layout_width="70dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/darkBG"
                    android:text="cash out "
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:background="@color/lightBG"
            android:layout_width="105dp"
            android:layout_marginLeft="48dp"
            android:orientation="vertical"
            android:layout_height="100dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:src="@drawable/transaction"
                    android:layout_marginLeft="5dp"
                    android:layout_width="70dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:textAlignment="center"
                    android:textColor="@color/darkBG"
                    android:text="transaction"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>