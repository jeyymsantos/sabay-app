<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FBEDFF"
    android:gravity="center"
    tools:context=".Login.LoginActivity">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:src="@drawable/illustrationone"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/shrikhand"
        android:gravity="center"
        android:text="Sabay"
        android:textColor="#430852"
        android:textSize="70sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_italic"
        android:text="making your daily Filipino trips convinient"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/montserrat"
            android:hint="email address"></com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:id="@+id/txtPassword"
            android:hint="password"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/montserrat"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:backgroundTint="#430852"
        android:id="@+id/btnLogin"
        android:fontFamily="@font/montserrat"
        android:text="login" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="115dp"
        android:fontFamily="@font/montserrat"
        android:text="forgot password?" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:fontFamily="@font/montserrat"
            android:text="not as existing user?" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="create an account" />
    </LinearLayout>

</LinearLayout>
